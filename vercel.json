{
  "cleanUrls": true,
  "redirects": [
    {"source": "/?pid=(?<pid>.*)", "has": [{"type": "query", "key": "pid"}], "destination": "/:pid", "permanent": true}
  ],
  "rewrites": [
    {"source": "/", "destination": "/index.html"},
    {"source": "/favicon.ico", "destination": "/favicon.ico"},
    {"source": "/src/(.*)", "destination": "/src/$1"},
    {"source": "/(.*)", "destination": "/api"}
  ]
}